{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
